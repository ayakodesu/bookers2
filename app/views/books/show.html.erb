<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class=col-md-3>
        <h2>User info</h2>
  <table class="table">
  <tr>
 <th>
  <% if current_user.profile_image.attached? %>
  <%= image_tag current_user.profile_image, size: "100x100" %>
  <% else %>
  <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
</th>
<table class="table">
  <tbody>
  <th>name</th>
  <th><%= current_user.name %></th>
  </tr>
  <tr>
  <th>introduction</th>
  <th><%= current_user.introduction %></th>
  </tr>
  </tbody>
  </table>

  <div class="row">
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>

    <i class="fas fa-user-cog"></i>
    <% end %>

  </div>


<h2 class="mt-3">New book</h2>

<%= form_with model: @book do |f| %>
<div class="field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :body, "Opinion" %>
  <%= f.text_area :body %>
</div>
<div class="action">
  <%= f.submit 'Create Book', class: "btn btn-success" %>
</div>
<% end %>

</div>



<div class="col-md-8 offset-md-1">

  <h2>Book detail</h2>
   <table class="table table-hover table-inverse">
      <thead>



  <table class="table">
    <tbody>
      <tr>
    <td>
    <%= link_to current_user.name, user_path %>
    <% if current_user.profile_image.attached? %>
    <%= image_tag current_user.profile_image, size: "100x100" %>
    <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
        </td>
    <td><%= link_to @book.title, book_path %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path %></td>
        <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>




  </table>
</tbody>
<table class="table table-hover table-inverse"></table>







