
<%= render 'list', books: @books %>



<div class="col-md-8 offset-md-1">

  <h2>Book detail</h2>
   <table class="table table-hover table-inverse">




  <table class="table">
    <tbody>
      <tr>
<% if user_signed_in? %>
    <td>
    <%= link_to user_path(@user.id) do %>
     <% if current_user.profile_image.attached? %>
    <%= image_tag current_user.profile_image, size: "100x100" %>
    <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
    <br>
    <%= link_to current_user.name, user_path(@user.id) %>
    </td>

    <% end %>
    </td>





    <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>


        <% if @book.user_id == current_user.id%>
        <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>

        <td><%= link_to "Destroy", destroy_book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      <% end %>
      <% end %>



  </table>
</tbody>
<table class="table table-hover table-inverse"></table>







