<%= render 'books/list', books: @books %>


<div class="col-md-8 offset-md-1">
  <h2>Users</h2>



  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
      </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
    <td>
    <% if book.user.profile_image.attached? %>
    <%= image_tag book.user.profile_image, size: "100x100" %>
    <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
        </td>
        <td><%= book.user.name %></td>
    <td><%= link_to "show", user_path(book.id) %></td>
    <% end %>

    </tbody>





  </table>
</tbody>


  </div>
  <table class="table table-hover table-inverse"></table>


